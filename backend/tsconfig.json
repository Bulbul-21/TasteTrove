{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": [
      "ES6",
      "DOM"
    ],
    /* Modules */
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "./",
    "resolveJsonModule": true,
    /* JavaScript Support */
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    /* Completeness */
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
